{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "functionAppName": {
      "type": "string",
      "defaultValue": "[format('func-cloudappsync-{0}', uniqueString(resourceGroup().id))]",
      "metadata": {
        "description": "Name of the Function App"
      }
    },
    "storageAccountName": {
      "type": "string",
      "defaultValue": "[format('stcloudapp{0}', uniqueString(resourceGroup().id))]",
      "maxLength": 24,
      "metadata": {
        "description": "Name of the storage account for the Function App"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources"
      }
    },
    "tenantId": {
      "type": "string",
      "metadata": {
        "description": "Azure AD Tenant ID"
      }
    },
    "clientId": {
      "type": "string",
      "metadata": {
        "description": "Service Principal Client ID for MDA and Sentinel access"
      }
    },
    "clientSecret": {
      "type": "securestring",
      "metadata": {
        "description": "Service Principal Client Secret"
      }
    },
    "mdaStreamIds": {
      "type": "string",
      "metadata": {
        "description": "Comma-separated list of MDA Stream IDs"
      }
    },
    "mdaPeriod": {
      "type": "string",
      "defaultValue": "P90D",
      "metadata": {
        "description": "MDA data aggregation period (e.g., P90D for 90 days)"
      }
    },
    "dceEndpoint": {
      "type": "string",
      "metadata": {
        "description": "Data Collection Endpoint URL for Sentinel"
      }
    },
    "dcrImmutableId": {
      "type": "string",
      "metadata": {
        "description": "Data Collection Rule Immutable ID for Sentinel"
      }
    },
    "workspaceId": {
      "type": "string",
      "metadata": {
        "description": "Log Analytics Workspace ID (GUID) for Sentinel"
      }
    },
    "workspaceName": {
      "type": "string",
      "metadata": {
        "description": "Log Analytics Workspace Name for Sentinel"
      }
    },
    "watchlistAlias": {
      "type": "string",
      "defaultValue": "CloudAppInfo",
      "metadata": {
        "description": "Watchlist alias for CloudAppInfo"
      }
    },
    "appInsightsName": {
      "type": "string",
      "defaultValue": "[format('appi-cloudappsync-{0}', uniqueString(resourceGroup().id))]",
      "metadata": {
        "description": "Name of Application Insights instance"
      }
    },
    "timerSchedule": {
      "type": "string",
      "defaultValue": "0 0 * * * *",
      "metadata": {
        "description": "CRON expression for timer trigger (default: hourly)"
      }
    }
  },
  "variables": {
    "hostingPlanName": "[format('asp-{0}', parameters('functionAppName'))]",
    "storageAccountNameCleaned": "[toLower(substring(parameters('storageAccountName'), 0, min(length(parameters('storageAccountName')), 24)))]",
    "storageAccountId": "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountNameCleaned'))]",
    "storageBlobDataOwnerRoleId": "[subscriptionResourceId('Microsoft.Authorization/roleDefinitions', 'b7e6dc6d-f1e8-4753-8033-0f276bb0955b')]",
    "storageFileDataPrivilegedContributorRoleId": "[subscriptionResourceId('Microsoft.Authorization/roleDefinitions', '69566ab7-960f-475b-8e7c-b3118f30c6bd')]"
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2023-01-01",
      "name": "[variables('storageAccountNameCleaned')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "Standard_LRS"
      },
      "kind": "StorageV2",
      "properties": {
        "supportsHttpsTrafficOnly": true,
        "minimumTlsVersion": "TLS1_2",
        "allowBlobPublicAccess": false,
        "allowSharedKeyAccess": true,
        "networkAcls": {
          "bypass": "AzureServices",
          "defaultAction": "Allow"
        }
      }
    },
    {
      "type": "Microsoft.Insights/components",
      "apiVersion": "2020-02-02",
      "name": "[parameters('appInsightsName')]",
      "location": "[parameters('location')]",
      "kind": "web",
      "properties": {
        "Application_Type": "web",
        "Request_Source": "rest"
      }
    },
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2023-01-01",
      "name": "[variables('hostingPlanName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "Y1",
        "tier": "Dynamic",
        "size": "Y1",
        "family": "Y"
      },
      "properties": {
        "reserved": false
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2023-01-01",
      "name": "[parameters('functionAppName')]",
      "location": "[parameters('location')]",
      "kind": "functionapp",
      "identity": {
        "type": "SystemAssigned"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanName'))]",
        "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountNameCleaned'))]",
        "[resourceId('Microsoft.Insights/components', parameters('appInsightsName'))]"
      ],
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanName'))]",
        "siteConfig": {
          "appSettings": [
            {
              "name": "AzureWebJobsStorage",
              "value": "[format('DefaultEndpointsProtocol=https;AccountName={0};EndpointSuffix={1};AccountKey={2}', variables('storageAccountNameCleaned'), environment().suffixes.storage, listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountNameCleaned')), '2023-01-01').keys[0].value)]"
            },
            {
              "name": "WEBSITE_CONTENTAZUREFILECONNECTIONSTRING",
              "value": "[format('DefaultEndpointsProtocol=https;AccountName={0};EndpointSuffix={1};AccountKey={2}', variables('storageAccountNameCleaned'), environment().suffixes.storage, listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountNameCleaned')), '2023-01-01').keys[0].value)]"
            },
            {
              "name": "WEBSITE_CONTENTSHARE",
              "value": "[toLower(parameters('functionAppName'))]"
            },
            {
              "name": "FUNCTIONS_EXTENSION_VERSION",
              "value": "~4"
            },
            {
              "name": "FUNCTIONS_WORKER_RUNTIME",
              "value": "powershell"
            },
            {
              "name": "FUNCTIONS_WORKER_RUNTIME_VERSION",
              "value": "7.4"
            },
            {
              "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
              "value": "[reference(resourceId('Microsoft.Insights/components', parameters('appInsightsName')), '2020-02-02').InstrumentationKey]"
            },
            {
              "name": "APPLICATIONINSIGHTS_CONNECTION_STRING",
              "value": "[reference(resourceId('Microsoft.Insights/components', parameters('appInsightsName')), '2020-02-02').ConnectionString]"
            },
            {
              "name": "TENANT_ID",
              "value": "[parameters('tenantId')]"
            },
            {
              "name": "CLIENT_ID",
              "value": "[parameters('clientId')]"
            },
            {
              "name": "CLIENT_SECRET",
              "value": "[parameters('clientSecret')]"
            },
            {
              "name": "MDA_STREAM_IDS",
              "value": "[parameters('mdaStreamIds')]"
            },
            {
              "name": "MDA_PERIOD",
              "value": "[parameters('mdaPeriod')]"
            },
            {
              "name": "DCE_ENDPOINT",
              "value": "[parameters('dceEndpoint')]"
            },
            {
              "name": "DCR_IMMUTABLE_ID",
              "value": "[parameters('dcrImmutableId')]"
            },
            {
              "name": "WORKSPACE_ID",
              "value": "[parameters('workspaceId')]"
            },
            {
              "name": "SUBSCRIPTION_ID",
              "value": "[subscription().subscriptionId]"
            },
            {
              "name": "RESOURCE_GROUP_NAME",
              "value": "[resourceGroup().name]"
            },
            {
              "name": "WORKSPACE_NAME",
              "value": "[parameters('workspaceName')]"
            },
            {
              "name": "WATCHLIST_ALIAS",
              "value": "[parameters('watchlistAlias')]"
            },
            {
              "name": "TIMER_SCHEDULE",
              "value": "[parameters('timerSchedule')]"
            }
          ],
          "powerShellVersion": "7.4",
          "use32BitWorkerProcess": false,
          "ftpsState": "Disabled",
          "minTlsVersion": "1.2"
        },
        "httpsOnly": true
      }
    },
    {
      "type": "Microsoft.Authorization/roleAssignments",
      "apiVersion": "2022-04-01",
      "name": "[guid(resourceId('Microsoft.Web/sites', parameters('functionAppName')), variables('storageBlobDataOwnerRoleId'))]",
      "scope": "[variables('storageAccountId')]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', parameters('functionAppName'))]",
        "[variables('storageAccountId')]"
      ],
      "properties": {
        "roleDefinitionId": "[variables('storageBlobDataOwnerRoleId')]",
        "principalId": "[reference(resourceId('Microsoft.Web/sites', parameters('functionAppName')), '2023-01-01', 'full').identity.principalId]",
        "principalType": "ServicePrincipal"
      }
    },
    {
      "type": "Microsoft.Authorization/roleAssignments",
      "apiVersion": "2022-04-01",
      "name": "[guid(resourceId('Microsoft.Web/sites', parameters('functionAppName')), variables('storageFileDataPrivilegedContributorRoleId'))]",
      "scope": "[variables('storageAccountId')]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', parameters('functionAppName'))]",
        "[variables('storageAccountId')]"
      ],
      "properties": {
        "roleDefinitionId": "[variables('storageFileDataPrivilegedContributorRoleId')]",
        "principalId": "[reference(resourceId('Microsoft.Web/sites', parameters('functionAppName')), '2023-01-01', 'full').identity.principalId]",
        "principalType": "ServicePrincipal"
      }
    }
  ],
  "outputs": {
    "functionAppName": {
      "type": "string",
      "value": "[parameters('functionAppName')]"
    },
    "functionAppPrincipalId": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.Web/sites', parameters('functionAppName')), '2023-01-01', 'full').identity.principalId]"
    },
    "functionAppUrl": {
      "type": "string",
      "value": "[format('https://{0}.azurewebsites.net', parameters('functionAppName'))]"
    },
    "appInsightsName": {
      "type": "string",
      "value": "[parameters('appInsightsName')]"
    }
  }
}
